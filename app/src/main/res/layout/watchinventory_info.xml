<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dip" >

    <LinearLayout android:layout_height="wrap_content" android:id="@+id/tableRow2" android:orientation="horizontal"
        android:padding="5dp" android:layout_width="fill_parent">
        <TextView
            android:id="@+id/caryear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/caryear"
            android:textSize="16sp" />

    </LinearLayout>


    <RelativeLayout android:layout_height="match_parent" android:id="@+id/tableRow3" android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
        android:paddingTop="0dp"
        android:paddingRight="5dp"
        android:paddingBottom="1dp">

        <TextView
            android:id="@+id/arrived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="16sp"
            android:gravity="left"
            android:layout_gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/locationlabel"
            />


        <TextView
            android:id="@+id/locationlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</LinearLayout>